{
  "roots": [
    "<rootDir>/packages/neoform/",
    "<rootDir>/packages/neoform-validation/",
    "<rootDir>/packages/neoform-plain-object-helpers/",
    "<rootDir>/packages/neoform-immutable-helpers/"
  ],
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/packages/$1"
  },
  "testMatch": [
    "**/test/*.jsx"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/src/*.jsx"
  ],
  "coverageReporters": [
    "lcov",
    "text-summary"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ]
}
